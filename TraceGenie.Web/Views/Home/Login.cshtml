@model TraceGenie.Web.Models.LoginModel

@{
    ViewBag.Title = "Podaj dane logowania Trace Genie";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "d-flex justify-content-center" }))
{
    <div class="row justify-content-center">
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-12 justify-content-center">

            @if (Model.LoginError)
            {
                <div class="row">
                    <div class="form-group text-danger text-center ml-3">
                        <span class="text-uppercase text-center">Nie udało się zalogować.</span><br />
                        <span>Sprawdź poprawność wprowadzonych</span><br />
                        <span>danych oraz czy masz aktywną</span><br />
                        <span>subskrypcję.</span><br />
                    </div>
                </div>

            }
            <div class="row">
                @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label ml-3" })
                <div class="col-lg-12 form-group">
                    @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label ml-3" })
                <div class="col-lg-12 form-group">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 form-group">
                    <input type="submit"
                           value="Zaloguj się do TraceGenie"
                           class="btn btn-primary form-control" />

                </div>
            </div>

        </div>
    </div>


}
